@model MPlan.Models.Plans

@{
    ViewData["Title"] = "Ayrıntılar";
}

<h1>Ayrıntılar</h1>

<div>
    <h4>Plans</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPercent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPercent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsageType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsageType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
    <a asp-action="Index">Listeye geri dön</a>
</div>

<div>
    <form asp-action="CreateComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Point" class="control-label"></label>

            <select asp-for="Point" class="form-control">
                @for (int i = 1; i < 6; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="Point" class="text-danger"></span>
        </div>
        @*<input type="hidden" asp-for="Id" value="1" />*@
        <div class="form-group">
            <input type="submit" value="Oluştur" class="btn btn-primary" />
        </div>
    </form>
</div>


<div>
    <h4>Yorumlar</h4>
    <hr />
    @if (Model.Comment != null)
    {
        @foreach (var com in Model.Comment)
        {
            Console.WriteLine(com.Comment);
        }
    }
</div>